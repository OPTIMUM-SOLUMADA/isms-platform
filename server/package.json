    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.1",
    "exceljs": "^4.4.0",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "googleapis": "^161.0.0",
    "html-minifier-terser": "^7.2.0",
    "joi": "^18.0.0",
    "jsonwebtoken": "^9.0.2",
    "juice": "^11.0.1",
    "mime-types": "^3.0.1",
    "multer": "^2.0.2",
