{
  "name": "isms-solumada-server",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watchAll",
    "build": "tsc -p tsconfig.app.json && tsc-alias",
    "build:app": "rimraf build && tsc -p tsconfig.app.json && tsc-alias",
    "start": "node build/server.js",
    "dev": "ts-node-dev -r tsconfig-paths/register src/server.ts",
    "postinstall": "prisma generate",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "prepare": "husky install"
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.{json,md}": [
      "prettier --write"
    ]
  },
  "keywords": [],
  "author": "Solumada",
  "license": "ISC",
  "description": "Server app for ISMS Solumada Platform",
