    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.0.5",
    "jest-mock-extended": "^4.0.0",
    "lint-staged": "^16.1.6",
    "pino-pretty": "^13.1.2",
    "prettier": "^3.6.2",
    "prisma": "^6.13.0",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.4",
